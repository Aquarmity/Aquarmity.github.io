---
const {lyric, color, link} = Astro.props;
---

<p><a href={`/lyricwall/${link}/`}>{lyric} &nbsp;</a></p>

<style define:vars={{ textColor: color }}>
    p, a {
        color: var(--gray);
        text-decoration: none;
        display: inline;
    }
    
    a:hover {
        color: var(--textColor);
        transition: 0.3s;
    }
</style>